<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.droidbarv1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.EmailActivity"
            android:parentActivityName=".activities.HistorialActivity"
            android:screenOrientation="locked"></activity>
        <activity
            android:name=".activities.PrintTicketActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.HistorialActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OrdenaComandaActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".activities.TicketActivity"
            android:label="@string/title_activity_ticket"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>